<h1>New user</h1>
<fieldset>
  <%= form_for(@user, url: users_path, html: { class: 'form-horizontal ', method: :post }) do |f| %>

      <div class="form-group">
        <%= f.label 'Login', class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :login, class: 'form-control' %>
        </div>
      </div>

         <div class="form-group">
        <%= f.label 'Email', class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.email_field :email, autocomplete: "new-password" , class: 'form-control' %>
        </div>
      </div>

         <div class="form-group">
        <%= f.label 'Password', class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.password_field :password, autocomplete: "new-password" , class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label 'password confirmation', class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control' %>
        </div>
      </div>

      <div class="form-group" >
        <div class="col-md-11">
          <%= f.submit 'Save', class: 'btn btn-success pull-right' %>
        </div>
      </div>
  <% end %>

</fieldset>
