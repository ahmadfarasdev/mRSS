<div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
  <div class="well no-padding">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: 'login-form', class: 'smart-form client-form ' }) do |f| %>
        <header>
        Forgot Password
      </header>

      <fieldset>

        <section>
          <label class="label">Enter your email address</label>
          <label class="input"> <i class="icon-append fa fa-envelope"></i>
            <%= f.email_field :email, autofocus: true %>
            <b class="tooltip tooltip-top-right"><i class="fa fa-envelope txt-color-teal"></i> Please enter email address for password reset</b></label>
        </section>

          <div class="note">
            <a href="<%= new_session_path :user %>" > I remembered my password!</a>
          </div>
        </section>

      </fieldset>
      <footer>
        <button type="submit" class="btn btn-primary">
          <i class="fa fa-refresh"></i> Reset Password
        </button>
      </footer>
    </form>

  </div>

</div>
    <% end %>
